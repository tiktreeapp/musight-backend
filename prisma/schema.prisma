// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(uuid())
  spotifyId      String        @unique
  displayName    String?
  avatarUrl      String?
  accessToken    String?
  refreshToken   String?
  tokenExpiresAt DateTime?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  tracks         TrackStat[]
  artists        ArtistStat[]
  musicProfile   MusicProfile?

  @@index([spotifyId])
}

model TrackStat {
  id            String   @id @default(uuid())
  userId        String
  trackId       String
  name          String
  artist        String
  imageUrl      String?
  playedAt      DateTime
  duration      Int?     // Track duration in ms
  popularity    Int?     // Spotify popularity score
  // Audio features (cached from Spotify API)
  danceability  Float?
  energy        Float?
  valence       Float?
  tempo         Float?
  createdAt     DateTime @default(now())
  User          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, playedAt])
  @@index([userId, trackId])
  @@unique([userId, trackId, playedAt]) // Prevent duplicates
}

model ArtistStat {
  id        String    @id @default(uuid())
  userId    String
  artistId  String
  name      String
  genres    String[]  // PostgreSQL text[] - array of genre strings
  imageUrl  String?
  playCount Int       @default(0)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  User      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, artistId])
  @@index([userId])
  @@index([artistId])
}

model MusicProfile {
  id          String   @id @default(uuid())
  userId      String   @unique
  topTracks   Json     // [{trackId, name, plays, imageUrl}]
  topArtists  Json     // [{artistId, name, plays, genres, imageUrl}]
  genreDist   Json     // { "pop": 0.4, "rock": 0.3, ... }
  avgEnergy   Float?
  avgValence  Float?
  lastUpdated DateTime @default(now()) @updatedAt
  User        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

